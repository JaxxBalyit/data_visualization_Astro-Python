---
import Layout from '@/layouts/Layout.astro';
import Header from '@/components/Header.astro';
import Footer from '@/components/Footer.astro';
import Chart from '@/components/Chart.astro';
---

<Layout title="MentEcológica - Portal de Cambios Climáticos">
  <Header />

  <main class="container mx-auto px-4 py-8 max-w-7xl">
    <section class="text-center mb-12">
      <h1 class="text-5xl font-bold bg-linear-to-r from-pink-500 to-orange-500 bg-clip-text text-transparent">  <!-- Fix: bg-gradient-to-r -->
        Portal de Cambios Climáticos
      </h1>
      <p class="text-xl text-gray-400 mt-4">Visualización de datos ambientales en tiempo real</p>
    </section>

    <div class="grid md:grid-cols-2 gap-8">
      <!-- CO₂ -->
      <div class="bg-gray-800 rounded-2xl p-6 shadow-xl border border-gray-700">
        <h3 class="text-2xl font-bold text-white mb-1">Emisiones de CO₂</h3>
        <p class="text-sm text-gray-400 mb-6">México (2015–2023)</p>
        <Chart
          title="Emisiones de CO₂"
          endpoint="co2"
          x="year" y="co2_mt"
          xLabel="Año" yLabel="CO₂ (Mt)"
          color="#ef4444"
          mode="lines+markers"
        />
      </div>

      <!-- Temperatura -->
      <div class="bg-gray-800 rounded-2xl p-6 shadow-xl border border-gray-700">
        <h3 class="text-2xl font-bold text-white mb-1">Temperatura Promedio</h3>
        <p class="text-sm text-gray-400 mb-6">Ciudad de México</p>
        <Chart
          title="Temperatura Promedio"
          endpoint="temperature"
          x="month" y="avg_temp"
          xLabel="Mes" yLabel="°C"
          color="#3b82f6"
          mode="lines"
        />
      </div>
    </div>
  </main>

  <Footer />
</Layout>